<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FluentAvaloniaSamples.Pages.HomePage">
    <Grid RowDefinitions="Auto,*">        
        <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="10" >            
            <StackPanel Orientation="Vertical" Grid.Row="1" TextBlock.FontSize="{StaticResource ControlContentThemeFontSize}">
                
                <TextBlock Text="How to Use" FontSize="16" FontWeight="700"/>
                <TextBlock Text="{Binding HowToUseText}" TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
