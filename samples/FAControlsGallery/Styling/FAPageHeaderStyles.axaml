<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="using:FAControlsGallery.Controls"
                    xmlns:pg="using:FAControlsGallery.Pages"
                    xmlns:ui="using:FluentAvalonia.UI.Controls">

    <Design.PreviewWith>
        <Border Padding="20" >
            <StackPanel>
                <!--<pg:FAControlsPageBase Height="600" Width="1280"
                                       TargetType="ui:HyperlinkButton"
                                            PreviewImage="/Assets/PageIcons/HyperlinkButton.jpg"
                                            WinUINamespace="Microsoft.UI.Xaml.Controls.Nhasdf"
                                            WinUIDocsLink="http://www.google.com"
                                            WinUIGuidelinesLink="http://www.microsoft.com"
                                            PageXamlSourceLink="http://www.github.com/amwx/FluentAvalonia"
                                            PageCSharpSourceLink="http://www.github.com/AvaloniaUI/Avalonia"
                                            Description="This is a test of a really long description that should wrap to a maximum of three (3) lines before it then trims the text to a character ellipsis and the full description is available in a ToolTip">
                    
                </pg:FAControlsPageBase>-->
                <ctrls:FAControlsPageHeader Width="400"  Height="1200" Classes="smallestWidth"
                                            TargetType="ui:HyperlinkButton"
                                            ControlName="HyperlinkButton"
                                            ControlNamespace="FluentAvalonia.UI.Controls"
                                            PreviewImage="{StaticResource HyperlinkButtonIcon}"
                                            WinUINamespace="Microsoft.UI.Xaml.Controls.Nhasdf"
                                            WinUIDocsLink="http://www.google.com"
                                            WinUIGuidelinesLink="http://www.microsoft.com"
                                            PageXamlSourceLink="http://www.github.com/amwx/FluentAvalonia"
                                            PageCSharpSourceLink="http://www.github.com/AvaloniaUI/Avalonia"
                                            Description="This is a test of a really long description that should wrap to a maximum of three (3) lines before it then trims the text to a character ellipsis and the full description is available in a ToolTip">

                </ctrls:FAControlsPageHeader>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme TargetType="ctrls:FAControlsPageHeader"
                  x:Key="{x:Type ctrls:FAControlsPageHeader}">
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Width" Value="350" />
        <Setter Property="Margin" Value="0 0 8 8" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <Grid RowDefinitions="*,Auto,Auto"
                          ColumnDefinitions="Auto,*,Auto"
                          Name="MainGrid"
                          Margin="12 48 12 24">

                        <!-- Preview Image -->
                        <Border Name="ImageHost"
                                CornerRadius="{StaticResource OverlayCornerRadius}"
                                ClipToBounds="True"
                                Height="125"
                                VerticalAlignment="Top"
                                Opacity="1"
                                Grid.Column="1"
                                Width="125">
                            <Border.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Height" 
                                                      Duration="00:00:00.25"
                                                      Easing="0,0 0,1" />
                                    <DoubleTransition Property="Opacity" 
                                                      Duration="00:00:00.25"
                                                      Easing="0,0 0,1" />
                                </Transitions>
                            </Border.Transitions>
                            <Viewbox Stretch="Fill">
                                <ui:IconSourceElement IconSource="{TemplateBinding PreviewImage}" />
                            </Viewbox>
                        </Border>

                        <!-- Main Information -->
                        <StackPanel Name="ControlInfoHost"
                                    Opacity="1"
                                    Grid.Row="0"
                                    Margin="0 150 0 0"
                                    Grid.Column="1"
                                    VerticalAlignment="Top">
                            <StackPanel.Transitions>
                                <Transitions>
                                    <ThicknessTransition Property="Margin"
                                                         Duration="00:00:00.25"
                                                         Easing="0,0 0,1" />
                                </Transitions>
                            </StackPanel.Transitions>
                            <TextBlock Text="{TemplateBinding ControlName}"
                                       Grid.Row="1"
                                       Theme="{StaticResource SubtitleTextBlockStyle}"
                                       Name="ControlNameText"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <TextBlock Text="{TemplateBinding ControlNamespace}"
                                       Grid.Row="2"
                                       Theme="{StaticResource CaptionTextBlockStyle}"
                                       FontStyle="Italic"
                                       Name="NamespaceText"
                                       Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="6 0"/>

                            <TextBlock Text="{TemplateBinding Description}"
                                       Grid.Row="3"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"
                                       Name="DescriptionTextBlock"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"
                                       Margin="6 12"
                                       TextAlignment="Center"
                                       MaxLines="4"/>

                            <StackPanel Spacing="4"
                                        Name="PageOptionButtonsHost"
                                        VerticalAlignment="Center"
                                        Margin="0 12">

                                <Button Name="ChangeThemeButton"
                                        Theme="{StaticResource TransparentButton}"
                                        HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <ui:SymbolIcon Symbol="Edit" />
                                        <TextBlock Text="Toggle Theme" />
                                    </StackPanel>
                                </Button>

                                <Button Name="ShowDefinitionButton"
                                        Theme="{StaticResource TransparentButton}"
                                        HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <ui:SymbolIcon Symbol="CodeFilled" />
                                        <TextBlock Text="Show Definition" />
                                    </StackPanel>
                                </Button>

                            </StackPanel>
                        </StackPanel>


                        <StackPanel Spacing="2"
                                    Name="WinUIRelationHost" 
                                    Opacity="1"
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    IsVisible="False">
                            <StackPanel.RenderTransform>
                                <TranslateTransform X="0" Y="0" />
                            </StackPanel.RenderTransform>
                            <TextBlock Text="Related WinUI Namespace"
                                       Theme="{StaticResource BodyStrongTextBlockStyle}" />

                            <TextBlock Text="{TemplateBinding WinUINamespace}"
                                       Grid.Row="2"
                                       Theme="{StaticResource CaptionTextBlockStyle}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontStyle="Italic"
                                       Margin="6 0"
                                       Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />

                            <StackPanel HorizontalAlignment="Center"
                                        Spacing="2">
                                <ui:HyperlinkButton Content="Documentation"
                                                    HorizontalAlignment="Center"
                                                    NavigateUri="{TemplateBinding WinUIDocsLink}"
                                                    Name="DocsButton"
                                                    IsVisible="False"/>
                                <ui:HyperlinkButton Content="Guidelines"
                                                    HorizontalAlignment="Center"
                                                    NavigateUri="{TemplateBinding WinUIGuidelinesLink}"
                                                    Name="GuidelinesButton"
                                                    IsVisible="False"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Spacing="4"
                                    Name="SamplePageLinksHost"
                                    Opacity="1"
                                    Grid.Column="1"
                                    Grid.Row="2">
                            <StackPanel.RenderTransform>
                                <TranslateTransform X="0" Y="0" />
                            </StackPanel.RenderTransform>
                            <TextBlock Text="View page code on Github"
                                       Theme="{StaticResource BodyStrongTextBlockStyle}" />

                            <StackPanel Spacing="2"
                                        HorizontalAlignment="Center">
                                <ui:HyperlinkButton Content="Xaml Source Code"
                                                    HorizontalAlignment="Center"
                                                    NavigateUri="{TemplateBinding PageXamlSourceLink}"
                                                    Name="XamlSourceButton"
                                                    ToolTip.Tip="{TemplateBinding PageXamlSourceLink}"
                                                    IsVisible="False"/>
                                <ui:HyperlinkButton Content="C# Source Code"
                                                    HorizontalAlignment="Center"
                                                    NavigateUri="{TemplateBinding PageCSharpSourceLink}"
                                                    ToolTip.Tip="{TemplateBinding PageCSharpSourceLink}"
                                                    Name="CSharpSourceButton"
                                                    IsVisible="False"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- If we have a related WinUI control -->
        <Style Selector="^:winui /template/ StackPanel#WinUIRelationHost">
            <Setter Property="IsVisible" Value="True" />

            <Style Selector="^:doclink /template/ ui|HyperlinkButton#DocsButton">
                <Setter Property="IsVisible" Value="True" />
            </Style>
            <Style Selector="^:guidelink /template/ ui|HyperlinkButton#GuidelinesButton">
                <Setter Property="IsVisible" Value="True" />
            </Style>
        </Style>

        <!-- Links to github pages -->
        <Style Selector="^:pagesrc /template/ StackPanel#SamplePageLinksHost">
            <Setter Property="IsVisible" Value="True" />
        </Style>

        <Style Selector="^:xamlsrc /template/ ui|HyperlinkButton#XamlSourceButton">
            <Setter Property="IsVisible" Value="True" />
        </Style>
        <Style Selector="^:csharpsrc /template/ ui|HyperlinkButton#CSharpSourceButton">
            <Setter Property="IsVisible" Value="True" />
        </Style>

        <!-- Height triggers -->
        <Style Selector="^:smallHeight">
            <Style Selector="^ /template/ Border#ImageHost">
                <Setter Property="Opacity" Value="0" />
                <Setter Property="Height" Value="0" />
            </Style>
            <Style Selector="^ /template/ StackPanel#ControlInfoHost">
                <Setter Property="Margin" Value="0 -48 0 0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Style>

        <Style Selector="^.smallestHeight">
            <Style Selector="^ /template/ StackPanel#WinUIRelationHost">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector="^ /template/ StackPanel#SamplePageLinksHost">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector="^ /template/ StackPanel#ControlInfoHost">
                <Setter Property="Margin" Value="0 0 0 0" />
            </Style>
        </Style>
        

        <!-- Small Width Trigger -->
        <Style Selector="^:smallWidth">
            <Setter Property="Width" Value="NaN" />
            <Setter Property="Height" Value="285" />
            
            <Style Selector="^ /template/ Grid#MainGrid">
                <Setter Property="Margin" Value="12 24" />
            </Style>

            <Style Selector="^ /template/ Border#ImageHost">
                <Setter Property="Grid.Column" Value="0" />
                <Setter Property="Grid.Row" Value="0" />
                <Setter Property="Grid.RowSpan" Value="2" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Width" Value="170" />
                <Setter Property="Height" Value="170" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style Selector="^ /template/ StackPanel#ControlInfoHost">
                <Setter Property="Grid.Column" Value="1" />
                <Setter Property="Grid.Row" Value="0" />
                <Setter Property="Grid.RowSpan" Value="2" />
                <Setter Property="Margin" Value="12 0" />
            </Style>
            <Style Selector="^ /template/ TextBlock#ControlNameText">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>


            <Style Selector="^ /template/ TextBlock#ControlNameText">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
            <Style Selector="^ /template/ TextBlock#NamespaceText">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0 6 0 0" />
            </Style>
            <Style Selector="^ /template/ TextBlock#DescriptionTextBlock">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0 6" />
                <Setter Property="TextAlignment" Value="Left" />
                <Setter Property="MaxLines" Value="4" />
            </Style>

            <Style Selector="^ /template/ StackPanel#PageOptionButtonsHost">
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0 12" />
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>

            <Style Selector="^ /template/ StackPanel#WinUIRelationHost">
                <Setter Property="Grid.Column" Value="2" />
                <Setter Property="Grid.Row" Value="0" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
            <Style Selector="^ /template/ StackPanel#SamplePageLinksHost">
                <Setter Property="Grid.Column" Value="2" />
                <Setter Property="Grid.Row" Value="1" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
            </Style>

            <Style Selector="^ /template/ StackPanel#WinUIRelationHost StackPanel">
                <Setter Property="Orientation" Value="Vertical" />
            </Style>
            <Style Selector="^ /template/ StackPanel#SamplePageLinksHost StackPanel">
                <Setter Property="Orientation" Value="Vertical" />
            </Style>
        </Style>

        <!-- Smallest Width Trigger -->
        <Style Selector="^.smallestWidth">
            <Setter Property="Width" Value="NaN" />
            <Setter Property="Height" Value="NaN" />
        </Style>
        
    </ControlTheme>
    
</ResourceDictionary>
