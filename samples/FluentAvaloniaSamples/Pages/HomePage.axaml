                <StackPanel>
                    <TextBlock Text="FluentAvalonia" VerticalAlignment="Top"
						   Classes="TitleTextBlockStyle"
						   Padding="32 20 0 0"/>

                    <TextBlock Margin="32 0" Text="Bringing more of WinUI and Fluent design into Avalonia" TextWrapping="Wrap" />
